# Railway 后端环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 服务器配置
PORT=3000
NODE_ENV=production

# Supabase 配置
SUPABASE_URL=https://你的项目.supabase.co
SUPABASE_KEY=你的anon_key
SUPABASE_SERVICE_KEY=你的service_role_key

# JWT 配置
JWT_SECRET=你的jwt密钥至少32位
JWT_EXPIRES_IN=7d

# 邮件配置 (可选)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=你的邮箱
EMAIL_PASS=你的邮箱密码

# 短信配置 (可选)
TWILIO_ACCOUNT_SID=你的twilio_account_sid
TWILIO_AUTH_TOKEN=你的twilio_auth_token
TWILIO_PHONE_NUMBER=你的twilio_phone_number

# OAuth 配置 (可选)
QQ_APP_ID=你的qq_app_id
QQ_APP_KEY=你的qq_app_key
WECHAT_APP_ID=你的wechat_app_id
WECHAT_APP_SECRET=你的wechat_app_secret

# Redis 配置 (可选)
REDIS_URL=redis://localhost:6379

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880